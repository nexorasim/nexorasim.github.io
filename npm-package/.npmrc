# NPM Registry Configuration
registry=https://registry.npmjs.org/
access=public

# Security and Provenance
audit-level=moderate
fund=false
provenance=true

# Publishing Configuration
publish-config-access=public
publish-config-registry=https://registry.npmjs.org/

# Token Configuration (set via environment or npm config)
# //registry.npmjs.org/:_authToken=${NPM_TOKEN}

# Package Lock Configuration
package-lock=true
save-exact=true

# Logging
loglevel=info